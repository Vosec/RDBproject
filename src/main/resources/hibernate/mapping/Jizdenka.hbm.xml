<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="cz.tul.rdb.entity.Jizdenka" table="jizdenka">

    <meta attribute="class-description">
      This class contains the ticket detail.
    </meta>

    <id name="cislo" type="java.math.BigInteger" column="cislo"/>
    <property name="linka" column="linka" type="string" length="50" not-null="true"/>
    <property name="email" column="email" type="string" length="50" not-null="false"/>
    <property name="cas" column="cas" type="timestamp" length="50" not-null="true"/>

  </class>
</hibernate-mapping>