<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="cz.tul.rdb.entity.Trasy" table="trasy">

    <meta attribute="class-description">
      This class contains the route detail.
    </meta>

    <id name="linka" type="string" column="linka" length="50"/>
    <property name="odkud" column="odkud" type="string" length="50" not-null="true"/>
    <property name="kam" column="kam" type="string" length="50" not-null="true"/>

  </class>
</hibernate-mapping>