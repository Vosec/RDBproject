<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="cz.tul.rdb.entity.Klient" table="klient">

    <meta attribute="class-description">
      This class contains the client detail.
    </meta>

    <id name="email" type="string" column="email" length="50"/>
    <property name="jmeno" column="jmeno" type="string" length="50" not-null="true"/>
    <property name="prijmeni" column="prijmeni" type="string" length="50" not-null="true"/>
  </class>
</hibernate-mapping>