<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="cz.tul.rdb.entity.Kontakt" table="kontakt">

    <meta attribute="class-description">
      This class contains the contact detail.
    </meta>

    <id name="hodnota" type="string" column="hodnota" length="50"/>
    <property name="typ" column="typ" type="string" length="50" not-null="true"/>
    <property name="cislo_rp" column="cislo_rp" type="string" length="50" not-null="true"/>

  </class>
</hibernate-mapping>